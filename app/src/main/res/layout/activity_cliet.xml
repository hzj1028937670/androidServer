<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp">

    <!--连接服务器-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_circle_white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_host_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="0.0.0.0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_line_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接服务器" />

        <Button
            android:id="@+id/btn_http_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="http请求测试" />

        <Button
            android:id="@+id/btn_down_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传下载" />

        <Button
            android:id="@+id/btn_loadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片加载" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ip_local"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp" />

</LinearLayout>